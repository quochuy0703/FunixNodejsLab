<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/auth.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <% if(errorMessage){%>
        <div class="user-message user-message--error"><%= errorMessage %></div>
      <% }%>
      <form class="login-form" action="/signup" method="POST">
        <div class="form-control">
          <label for="title">Email</label>
          <input class="<%= validationErrors.find(p => p.param === 'email') ? 'invalid' : ''%>" type="text" name="email" id="email" value="<%= oldInput.email%>"/>
        </div>
        <div class="form-control">
          <label for="imageUrl">Password</label>
          <input class="<%= validationErrors.find(p => p.param === 'password') ? 'invalid' : ''%>" type="password" name="password" id="password" value="<%= oldInput.password%>" />
        </div>
        <div class="form-control">
          <label for="imageUrl">Confirm Password</label>
          <input class="<%= validationErrors.find(p => p.param === 'confirmPassword') ? 'invalid' : ''%>" type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword%>"/>
        </div>

        <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
        <button type="submit">Sigup</button>
      </form>
    </main>
<%- include('../includes/end.ejs')%>
